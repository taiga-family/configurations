{
    "name": "taiga-linters",
    "private": true,
    "description": "",
    "license": "Apache-2.0",
    "workspaces": [
        "projects/*"
    ],
    "scripts": {
        "lint": "eslint . --no-error-on-unmatched-pattern",
        "prettier": "prettier '**/*.{svg,yml,js,ts,html,md,less,json}' --ignore-path .prettierignore",
        "format": "npm run prettier -- --write",
        "stylelint": "stylelint '**/*.{less,css}' --allow-empty-input --config package.json"
    },
    "prettier": "@taiga-ui/prettier-config",
    "eslintConfig": {
        "extends": [
            "plugin:@taiga-ui/experience/all"
        ]
    },
    "stylelint": {
        "extends": [
            "@taiga-ui/stylelint-config/taiga"
        ],
        "ignoreFiles": [
            "**/demo/**",
            "**/dist/**",
            "**/coverage/**",
            "**/node_modules/**"
        ]
    },
    "devDependencies": {
        "@nx/jest": "16.8.1",
        "@nx/node": "16.8.1",
        "@nx/workspace": "16.8.1",
        "eslint": "8.49.0",
        "lerna": "7.2.0",
        "nx": "16.8.1",
        "nx-cloud": "16.4.0",
        "prettier": "3.0.3",
        "stylelint": "15.10.3"
    }
}
